@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.LogoData)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img class="rounded-circle rounded-image-for-model" src="data:image/png;base64,@Convert.ToBase64String(item.LogoData!)" alt="@item.Name">
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @if (User.IsInRole("Admin"))
                            {
                            <a class="btn btn-outline-primary text-black" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a class="btn btn-danger text-black" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a> 
                            }
                            <a class="btn btn-outline-info text-black" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@if (User.IsInRole("Admin"))
{
<div style="position: fixed; right: 25px; bottom: 70px" class="text-white">
    <a asp-controller="Cinemas" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"> Add New</i></a>
</div>
}