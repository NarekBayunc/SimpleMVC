@model Cinema

@{
    ViewData["Title"] = "Details of Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">

        <h1 style="text-align: center;">Details for @Model.Name</h1>

        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    @{
                        var base64String = Model.LogoData != null ? Convert.ToBase64String(Model.LogoData) : string.Empty;
                    }
                    <img class="border-info rounded-circle rounded-image-for-model" id="CinemaPicturePreview"
                         src="data:image/png;base64,@base64String" />
                </div>
                <div class="form-group mb-1">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                </div>

                <div class="form-group">
                    @if (User.IsInRole("Admin"))
                    {
                    <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>

    </div>
</div>
