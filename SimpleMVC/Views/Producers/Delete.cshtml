@model Producer

@{
    ViewData["Title"] = "Deleting of Producer";
}

<div class="row text">
    <div class="col-md-8 offset-2">

        <h1 style="text-align: center;">Delete confirmation for @Model.FullName</h1>

        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                    @{
                        var base64String = Model.PictureData != null ? Convert.ToBase64String(Model.PictureData) : string.Empty;
                    }
                    <img class="border-info rounded-circle rounded-image-for-model" id="PersonPicturePreview"
                         src="data:image/png;base64,@base64String" />
                    </div>
                    <div class="form-group mb-1">
                        <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <form asp-action="DeleteConfirmed">
                            <input type="hidden" asp-for="Id"/> 
                            <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
            </div>
        </div>

    </div>
</div>

