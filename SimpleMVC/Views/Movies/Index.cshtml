@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}

<div class="row">

    @if (TempData.ContainsKey("SignedIn"))
    {
        <div id="successAlert" class="alert alert-success text-center">
            Hello @TempData["SignedIn"], you have successfully created an account.
        </div>
    }
    @if (TempData.ContainsKey("LoggedIn"))
    {
        <div id="successAlert" class="alert alert-success text-center">
            Hello @TempData["LoggedIn"] , you are successfuly Logged In
        </div>
    }
    @if (TempData.ContainsKey("IsMovieAdded"))
    {
        <div id="successAlert" class="alert alert-success text-center">
            New movie are successfuly Added.
        </div>
    }
    @foreach (var movie in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
            <div class="card mb-3" >
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info" id="card-header">
                            <h5 class="card-title">
                                @movie.Name
                                @if (User.IsInRole("Admin"))
                                {
                                <a class="text-white float-end" asp-action="Edit" asp-route-id="@movie.Id"><i class="bi bi-pencil-square"></i></a>
                                }
                            </h5>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img class="img-fluid MovieImage" src="data:image/png;base64,@Convert.ToBase64String(movie.PictureData!)" alt="@movie.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@movie.Description</p>
                            <p class="card-text"><b>Cinema: </b>@movie?.Cinema?.Name</p>
                            <p class="card-text"><b>Category: </b>@movie?.MovieCategory</p>
                            <p class="card-text"><b>Start Date: </b>@movie?.StartDate.ToString("dd MMM yy")</p>
                            <p class="card-text"><b>End Date: </b>@movie?.EndDate.ToString("dd MMM yy")</p>
                            <p class="card-text">
                                <b>Status: </b>
                                @if (DateTime.Now >= movie?.StartDate && DateTime.Now <= movie.EndDate)
                                {
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                }
                                else if (DateTime.Now > movie?.EndDate)
                                {
                                    <span class="badge bg-danger text-white">EXPIRED</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary text-white">UPCOMING</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-end" asp-action="Details" asp-route-id="@movie?.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                <a class="btn btn-success text-white" href="#">
                                    <i class="bi bi-cart-plus"></i> Add to Cart (Price @movie?.Price.ToString("c"))
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (User.IsInRole("Admin"))
    {
    <div>
        <a style="position: fixed; right: 25px; bottom: 70px;" asp-controller="Movies" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"> Add New</i></a>
    </div>
    }
</div>
