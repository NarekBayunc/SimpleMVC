@model Actor

@{
    ViewData["Title"] = "Add a new Actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">

            <h1 style="text-align: center;">Add a new Actor</h1>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle rounded-image-for-model" id="PersonPicturePreview"
                        src="~/img/not-found.jpg" />
                    </div>
                <div class="form-group mb-3">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 custom-file">
                    <label asp-for="PictureData" class="custom-file-label me-2">Select picture for Actor</label>
                        <input asp-for="PictureData" type="file" class="custom-file-input" id="PictureData">
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-success float-end" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
                </form>
            </div>
        </div>

    </div>
</div>

